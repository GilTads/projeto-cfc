extends ../layout
block content
	section.container.nav-top
		.panel.panel-default
			.panel-heading.text-center
				h3
					span.fa.fa-tachometer  Instrutores
			.panel-body
				br
				br
				if messages.erro
					.alert.alert-danger#success-alert
						p #{messages.erro}
					br
				if messages.info
					.alert.alert-success#success-alert
						p #{messages.info}
					br
				if instrutor.length > 0
					.table-responsive
						table.table.table-striped.listar-usuarios
							thead
								tr
									th Nome:
									th E-mail
									th Data do cadastro
									th Editar
									
							tbody
								each valor in instrutor
									tr
										td #{valor.nome}
										td #{valor.email}
										td #{moment(valor.data_cad).format('DD/MM/YYYY HH:MM:ss')}
										td
											a.btn(href="/usuarios/editar/#{valor._id}")
												span.glyphicon.glyphicon-pencil
										
				else
					p Nenhum registro encontrado!

