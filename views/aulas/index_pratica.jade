						.table-responsive
							table.table.table-striped#listar-usuarios
								thead
									tr
										th Nome
										th CPF
										th Selecionar
								tbody
									each dados in aluno
										tr
											td #{dados.nome}
											td #{dados.cpf}
											td
												a.btn(href="/aulas/praticas/#{dados._id}")
													span.glyphicon.glyphicon-search
				.modal-footer
					button.btn.btn-secondary(data-dismiss="modal") Close



