	.modal.fade#instrutorModal(role="dialog",aria-labelledby="instrutorModal", aria-hiden="true")
		.modal-dialog.modal-md
			.modal-content
				.modal-header
					button.close(type="button",data-dismiss="modal", aria-label="Close")
						span(aria-hiden="true")
					h4.modal-title Instrutor
				.modal-body
					if lista_instrutor.length > 0
						.table-responsive
							table.table.table-stripped.listar-usuarios
								thead
									tr
										th Nome
										th CPF
										th Selecionar
								tbody
									each instrutor in lista_instrutor
										tr
											td #{instrutor.nome}
											td #{instrutor.cpf}
											td
												form(method="post", action="/aulas/praticas/instrutor/#{instrutor._id}")
													button.btn(type="submit")
														span.glyphicon.glyphicon-search
				.modal-footer
					button.btn.btn-secondary(data-dismiss="modal") Close



	.modal.fade#alunoModal(role="dialog",aria-labelledby="alunoModal", aria-hiden="true")
		.modal-dialog.modal-md
			.modal-content
				.modal-header
					button.close(type="button",data-dismiss="modal", aria-label="Close")
						span(aria-hiden="true")
					h4.modal-title Alunos
				.modal-body
					if lista_aluno.length > 0
						.table-responsive
							table.table.table-striped.listar-usuarios
								thead
									tr
										th Nome
										th CPF
										th RENACH
										th Selecionar
								tbody
									each aluno in lista_aluno
										tr
											td #{aluno.nome}
											td #{aluno.cpf}
											td #{aluno.renach}
											td
												form(method="post", action="/aulas/praticas/aluno/#{aluno._id}")
													button.btn(type="submit")
														span.glyphicon.glyphicon-search
				.modal-footer
					button.btn.btn-secondary(data-dismiss="modal") Close


	.modal.fade#veiculoModal(role="dialog",aria-labelledby="veiculoModal", aria-hiden="true")
		.modal-dialog.modal-md
			.modal-content
				.modal-header
					button.close(type="button",data-dismiss="modal", aria-label="Close")
						span(aria-hiden="true")
					h4.modal-title Veículos
				.modal-body
					if lista_veiculo.length > 0
						.table-responsive
							table.table.table-striped.listar-usuarios
								thead
									tr
										th Nome
										th Placa
										th Categoria
										th Selecionar
								tbody
									each veiculo in lista_veiculo
										tr
											td #{veiculo.nome}
											td #{veiculo.placa}
											td #{veiculo.categoria}
											td
												form(method="post", action="/aulas/praticas/veiculo/#{veiculo._id}")
													button.btn(type="submit")
														span.glyphicon.glyphicon-search
				.modal-footer
					button.btn.btn-secondary(data-dismiss="modal") Close

	



