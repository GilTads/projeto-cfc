extends ../layout
block content
	section.container.nav-top
		.panel.panel-default
			.panel-heading.text-center
				h3
					span.fa.fa-car  Aulas Práticas  
			.panel-body
				ul.nav.nav-tabs
					li.active(role="presentation")
						a(href="#main", data-toggle="tab") Agendamento de Aulas
					li(role="presentation")
						a(href="#menu1", data-toggle="tab") Profile
					li(role="presentation")
						a(href="#menu2", data-toggle="tab") Messages
					li(role="presentation")
						a(href="#menu3" data-toggle="tab") Settings
				.tab-content
					.tab-pane.active.fade.in#main
						h3 Agendamento de Aulas
						hr
						form(role="form", action="", method="")
							.row
								.col-xs-8.col-sm-8.col-md-3
									.form-group
										label Aluno
										input.form-control(type="text", name="aluno", value="#{aluno.nome || ''}" disabled, placeholder="Aluno")
								.col-xs-1.col-sm-1.col-md-1
										a.btn.btn-danger.lab(data-toggle="modal", data-target="#alunoModal")
											span.glyphicon.glyphicon-search
								.col-xs-8.col-sm-8.col-md-3
									.form-group
										label Instrutor
										input.form-control(type="text", name="instrutor", value="#{instrutor.nome || ''}",disabled, placeholder="Instrutor")
								.col-xs-1.col-sm-1.col-md-1
										a.btn.btn-danger.lab(data-toggle="modal", data-target="#instrutorModal")
											span.glyphicon.glyphicon-search
								.col-xs-8.col-sm-8.col-md-3
									.form-group
										label Veículo
										input.form-control(type="text", name="veiculo", value="#{veiculo.nome || ''}#{veiculo.placa || ''}", disabled, placeholder="Veículo")
								.col-xs-1.col-sm-1.col-md-1
										a.btn.btn-danger.lab(data-toggle="modal", data-target="#veiculoModal")
											span.glyphicon.glyphicon-search
						hr
							
									
									
						


