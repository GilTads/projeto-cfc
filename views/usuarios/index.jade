extends ../layout

block content
	.container.nav-top
			.panel.panel-default
				.panel-heading.text-center
					h3
						span.fa.fa-users  Usuários
				.panel-body
					a(href="/cadastro",class="btn btn-danger") Cadastrar
					br
					br
					if messages.erro
						div(class="alert alert-danger")
							p #{messages.erro}
						br
					if messages.info
						div(class="alert alert-success")
							p #{messages.info}
						br
					if lista.length > 0
						.table-responsive
							.table
								table(class="table table-striped")
									thead
										tr
											th ID:
											th Nome:
											th E-mail:
											th Data do Cadastro:
											th Cargo
											th Ações:
									tbody
										each valor in lista
											tr
												td #{valor._id}
												td #{valor.nome}
												td #{valor.email}
												td #{moment(valor.data_cad).format('DD/MM/YYYY HH:MM:ss')}
												td #{valor.setor}
												td
													a(href="/usuarios/listar/#{valor._id}", class="btn btn-info")
														span(class="glyphicon glyphicon-search")
													span &nbsp;
													//- a(href="/usuarios/edit/#{valor._id}", class="btn btn-primary")
													//- 	span(class="glyphicon glyphicon-pencil")
					else
						p Nenhum registro encontrado!